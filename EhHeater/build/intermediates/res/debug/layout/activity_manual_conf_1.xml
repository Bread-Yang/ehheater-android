<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" >

        <TextView
            android:id="@+id/tv_connect_device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="68dp"
            android:layout_toLeftOf="@+id/manual1_tvcenter"
            android:text="连接热水器"
            android:textColor="@color/title_color" />

        <TextView
            android:id="@+id/manual1_tvcenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@+id/manual1_tvcenter"
            android:text="输入wifi密码"
            android:textColor="@color/color1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center" >

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/step_dot_highlight"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="4dp"
            android:background="@color/color1" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/step_dot"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/color1"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/amc1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/manual_operation_step"
        android:textColor="@color/color1"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:src="@drawable/settings_wifi" />

</LinearLayout><!-- From: file:/Users/yoghourt/Gitlab/water_heater_android/EhHeater/res/layout/activity_manual_conf_1.xml -->