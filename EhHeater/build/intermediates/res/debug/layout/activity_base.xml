<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/rlt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/base_activity_top_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <RelativeLayout
                android:id="@+id/rlt_center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rlt_center_no_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_loading"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/connect_dialog_bg"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <ProgressBar
                    android:id="@+id/acad_pbar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/awad_tv_2"
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="加载中..."
                    android:textColor="#fff" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/yoghourt/Gitlab/water_heater_android/EhHeater/res/layout/activity_base.xml -->