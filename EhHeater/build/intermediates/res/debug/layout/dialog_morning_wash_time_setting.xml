<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tip_bg3"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:visibility="visible" >

    <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/morning_wash_time"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.vanward.ehheater.view.wheelview.WheelView
                android:id="@+id/wheelView1"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                app:TextHeight="17dp"
                app:centerLabelPosition="30"
                app:textHighlightColor="@color/title_color"
                app:textNormalColor="@color/an_hui"
                app:wheelBackground="@color/transparent" />

            <com.vanward.ehheater.view.wheelview.WheelView
                android:id="@+id/wheelView2"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                app:TextHeight="17dp"
                app:centerLabelPosition="30"
                app:textHighlightColor="@color/title_color"
                app:textNormalColor="@color/an_hui"
                app:wheelBackground="@color/transparent" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=":"
            android:textColor="@color/title_color"
            android:textSize="20dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/yoghourt/Gitlab/water_heater_android/EhHeater/res/layout/dialog_morning_wash_time_setting.xml -->