<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" >

        <TextView
            android:id="@+id/tv_connect_device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="68dp"
            android:layout_toLeftOf="@+id/manual1_tvcenter"
            android:text="连接热水器"
            android:textColor="@color/title_color" />

        <TextView
            android:id="@+id/manual1_tvcenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@+id/manual1_tvcenter"
            android:text="输入wifi密码"
            android:textColor="@color/title_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center" >

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/step_dot_highlight"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="4dp"
            android:background="@color/title_color" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/step_dot_highlight"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/set_device_tip3"
        android:textColor="@color/color1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="(无线局域网默认为智能移动终端当前正在使用的无线局域网, 若需更改, 请先更改智能移动终端使用的网络配置)"
        android:textColor="@color/color2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_input_bg"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络名称"
                android:textColor="@color/color1" />

            <EditText
                android:id="@+id/et_input_ssid"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="@color/color1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@color/color1" />

            <EditText
                android:id="@+id/amc2_et_psw"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/title_color" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/amc2_btn_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_zhu"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>