<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:orientation="vertical" 
    android:background="@color/activity_background"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/manual1_tvcenter"
            android:layout_marginRight="68dp"
            android:textColor="@color/title_color"
            android:text="连接热水器"
            />
        
        <TextView
            android:id="@+id/manual1_tvcenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/manual1_tvcenter"
            android:layout_marginLeft="64dp"
            android:textColor="@color/color1"
            android:text="输入wifi密码"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center">
        
        <TextView 
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:background="@drawable/step_dot_highlight"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="1"
            />
        
        <TextView 
            android:layout_width="180dp"
            android:layout_height="4dp"
            android:background="@color/color1"
            />
        
        <TextView 
            android:layout_height="28dp"
            android:layout_width="28dp"
            android:background="@drawable/step_dot"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/color1"
            android:text="2"
            />
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/amc1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color1"
        android:textSize="16dp"
        android:text="1. 请进入 设置 > Wifi, 选择XPG-GAgent\n\n2. 输入密码: 123456789 \n\n3. 完成后请返回此界面, 将自动跳转到下一步"
        />
    
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:src="@drawable/settings_wifi"/>

</LinearLayout>
