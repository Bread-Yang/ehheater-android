<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="288dp"
        android:layout_height="132dp"
        android:layout_marginTop="36dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/input_bg_san"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:text="手机号码"
                />
            <View android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ar_et_phone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="phone" 
                android:hint="手机号码"
                android:textSize="16dp"
                />

        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:text="密码"
                />
            <View android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ar_et_psw"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:hint="密码"
                android:textSize="16dp"
                android:text="" />

        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:text="确认密码"
                />
            <View android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ar_et_confirm_psw"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:text="" 
                android:textSize="16dp"
                android:hint="确认密码"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingRight="12dp"
        android:gravity="right">
    
	    <CheckBox 
	        android:id="@+id/ar_chkbx_showpsw"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_grey2" 
	        android:text="显示密码"
	        />
    </LinearLayout>
    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <Button 
        android:id="@+id/ar_btn_confirm"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_zhu"
        android:textColor="@color/white"
        android:text="确认"/>

</LinearLayout>